html
    head
        title Socket.IO chat

        style.

            * { margin: 0; padding: 0; box-sizing: border-box; }

            body {
                font: 13px Helvetica, Arial;
            }

            form {
                background: #000;
                padding: 3px;
                position: fixed;
                bottom: 0;
                width: 100%;
            }

            form input {
                border: 0; padding: 10px; width: 85%; }

            form button {
                width: 15%;
                background: rgb(130, 224, 255);
                border: none;
                padding: 10px;
            }

            #messages { list-style-type: none; margin: 0; padding: 0; }

            #messages li {
                padding: 25px 10px;
            }

            #oppmsg {
                float: left;
                padding: 10px;
                background: #d0e9c6;
                border-radius: 25px;
            }

            #mymsg {
                float: right;
                padding: 10px;
                background: #9acfea;
                border-radius: 25px;
            }
            #divmsg {
                overflow:auto; height: 90%;
            }



    body
        div#divmsg
            ul#messages

        div
            form(action='')
                input#m(autocomplete='off')
                button Send

        script(src='https://cdn.socket.io/socket.io-1.2.0.js')

        script(src='http://code.jquery.com/jquery-1.11.1.js')

        script.
            var socket = io();

            $('form').submit(function(){
                socket.emit('chat message', $('#m').val());
                $('#messages').append($('<li>').append($('<span id="mymsg">').text($('#m').val())));
                if ($('#divmsg').prop('scrollHeight') > $('#divmsg').height())
                    $('#divmsg').scrollTop($('#divmsg').prop('scrollHeight'));
                $('#m').val('');
                return false;
            });
            socket.on('chat message', function(msg){
                $('#messages').append($('<li>').append($('<span id="oppmsg">').text(msg)));
                if ($('#divmsg').prop('scrollHeight') > $('#divmsg').height())
                    $('#divmsg').scrollTop($('#divmsg').prop('scrollHeight'));
            });


