        script(src='https://cdn.socket.io/socket.io-1.2.0.js')

        script(src='http://code.jquery.com/jquery-1.11.1.js')

        script.
            var socket = io();
            $('form').submit(function(){
                socket.emit('chat message', [!{JSON.stringify(m_id)}, $('#m').val()]);
                $('#messages').append($('<span id="myid">').text(!{JSON.stringify(m_id)})).append($('<li>').append($('<span id="mymsg">').text($('#m').val())));

                if ($('#divmsg').prop('scrollHeight') > $('#divmsg').height())
                    $('#divmsg').scrollTop($('#divmsg').prop('scrollHeight'));
                $('#m').val('');
                return false;
            });

            socket.on('chat message', function(msg){
                $('#messages').append($('<span id="oppid">').text(msg['m_id'])).append($('<li>').append($('<span id="oppmsg">').text(msg['m_content'])));
                if ($('#divmsg').prop('scrollHeight') > $('#divmsg').height())
                    $('#divmsg').scrollTop($('#divmsg').prop('scrollHeight'));
            });
